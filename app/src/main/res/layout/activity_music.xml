<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e12244"
    android:fitsSystemWindows="true">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_music"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    tools:context="com.example.administrator.starmusic.ui.MusicActivity">

<RelativeLayout
    android:background="#e12244"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    >
<TextView
    android:gravity="center"
    android:id="@+id/tv_musicName"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:textSize="20dp"
    android:text="歌曲名"
    />
    <TextView
        android:layout_below="@+id/tv_musicName"
        android:gravity="center"
        android:id="@+id/tv_singer"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:text="演唱者"
        android:textSize="20dp"
        />
    <TextView
        android:layout_marginRight="15dp"
        android:background="@drawable/setting_back_selector"
        android:id="@+id/ib_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        />
<!--<ImageButton-->
    <!--android:background="@null"-->
    <!--android:id="@+id/ib_back"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_centerVertical="true"-->
    <!--android:src="@mipmap/back"-->
    <!--android:scaleType="fitXY"-->

    <!--/>-->

</RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="220dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/civ_pic"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        fresco:placeholderImage="@mipmap/wanghong"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="180dp"
        fresco:actualImageScaleType="focusCrop"
        />
</RelativeLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    <TextView
        android:id="@+id/tv_music_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        />
        <TextView
            android:id="@+id/tv_music_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:22"
            android:layout_alignParentRight="true"
            />
    <SeekBar
        android:max="100"
        android:progress="0"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sb_music_progress"
        android:layout_toRightOf="@+id/tv_music_current"
        android:layout_toLeftOf="@+id/tv_music_duration"
        />
<CheckBox
    android:layout_below="@+id/tv_music_current"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:button="@null"
    android:background="@drawable/button_like_selector"
    />
<TextView
    android:gravity="center"
    android:id="@+id/dianzhan_number"
    android:layout_marginTop="10dp"
    android:layout_width="wrap_content"
    android:layout_height="30dp"
    android:text="88625"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/tv_music_duration"
    />
        <CheckBox
            android:id="@+id/cb_liu"
            android:layout_below="@+id/tv_music_current"
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:button="@null"
            android:background="@drawable/button_liu_selector"
            android:layout_toLeftOf="@+id/dianzhan_number"
            />

    </RelativeLayout>

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<CheckBox
    android:id="@+id/ib_start"
    android:layout_width="80dp"
    android:layout_height="80dp"
    android:background="@drawable/checkbox_startorpause_selector"
   android:button="@null"
    android:layout_centerHorizontal="true"
    />

        <ImageButton
            android:background="#ffffff"
            android:padding="10dp"
            android:id="@+id/ib_previous"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/previous"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/ib_start" />

        <ImageButton
            android:background="#ffffff"
            android:padding="10dp"
        android:id="@+id/ib_next"
            android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/next"
        android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/ib_start" />
        <!--<RelativeLayout-->
            <!--android:layout_marginTop="40dp"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_below="@+id/ib_start"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content">-->
            <ImageButton
                android:background="@drawable/imagerbutton_commit_selector"
                android:padding="1dp"
                android:id="@+id/ib_moshi"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:src="@mipmap/moshi"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                />
            <ImageButton
                android:background="@drawable/imagerbutton_commit_selector"
                android:padding="1dp"
                android:scaleType="fitXY"
                android:id="@+id/ib_xiazai"
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:src="@mipmap/xiazai"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_centerVertical="true"
                />

        <!--</RelativeLayout>-->
    </RelativeLayout>
</LinearLayout>
</LinearLayout>
