<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#ff653f"
    tools:context="com.example.administrator.starmusic.ui.SettingActivity">

    <LinearLayout
        android:id="@+id/activity_setting"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bbbbbb"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ff653f"
        >

        <TextView
            android:gravity="center"
            android:id="@+id/tv_singer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:text="设置中心"
            android:textSize="20dp"
            />
        <TextView
            android:layout_marginRight="15dp"
            android:background="@drawable/setting_back_selector"
            android:id="@+id/ib_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_height="50dp">

    <TextView
        android:textColor="#000000"
        android:paddingLeft="10dp"
        android:clickable="true"
        android:background="@drawable/textview_setting_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="仅Wifi下联网"
        android:gravity="center_vertical"
        android:textSize="@dimen/setting_textsize"/>
    <com.example.administrator.starmusic.view.SwitchButton
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:id="@+id/sb_wifi_contect"
        style="@style/SwitchButtonStyle"
        android:layout_width="60dp"
        android:layout_height="30dp"
        app:thumb_width="20dp"
        app:thumb_height="20dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:background="@drawable/textview_setting_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="WIFI下自动离线缓存"
            android:gravity="center_vertical"
            android:textSize="@dimen/setting_textsize"/>
        <com.example.administrator.starmusic.view.SwitchButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sb_wifi_auto_huancun"
            style="@style/SwitchButtonStyle"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:thumb_width="20dp"
            app:thumb_height="20dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:background="@drawable/textview_setting_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="桌面悬浮音乐球"
            android:gravity="center_vertical"
            android:textSize="@dimen/setting_textsize"/>
        <com.example.administrator.starmusic.view.SwitchButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:id="@+id/sb_floating_windown"
            style="@style/SwitchButtonStyle"
            android:layout_width="60dp"
            android:layout_height="30dp"
            app:thumb_width="20dp"
            app:thumb_height="20dp"/>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="1dp"
        android:background="#ffffff"
        android:layout_height="50dp">

        <TextView
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:clickable="true"
            android:background="@drawable/textview_setting_selector"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="歌曲和缓存储存目录"
            android:gravity="center_vertical"
            android:textSize="@dimen/setting_textsize"/>
        <!--<TextView-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:gravity="center"-->
            <!--android:id="@+id/tv_neicunka"-->
            <!--android:layout_width="60dp"-->
            <!--android:layout_height="30dp"-->
            <!---->

            <!--/>-->


    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_height="50dp">

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:background="@drawable/textview_setting_selector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="遇梦梦想计划 遇见你的梦想"
                android:textSize="@dimen/setting_textsize"
                android:gravity="center_vertical"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_height="50dp">

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:clickable="true"
                android:background="@drawable/textview_setting_selector"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:text="常见问题解决"
                android:textSize="@dimen/setting_textsize"
                android:gravity="center_vertical"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_height="50dp">

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:clickable="true"
            android:background="@drawable/textview_setting_selector"
            android:text="检查更新"
            android:textSize="@dimen/setting_textsize"
            android:gravity="center_vertical"
            />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="1dp"
            android:background="#ffffff"
            android:layout_height="50dp">

            <TextView
                android:textColor="#000000"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:clickable="true"
                android:background="@drawable/textview_setting_selector"
                android:text="关于遇梦"
                android:textSize="@dimen/setting_textsize"
                android:gravity="center_vertical"
                />

        </RelativeLayout>


        <View
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            />

</LinearLayout>
</LinearLayout>